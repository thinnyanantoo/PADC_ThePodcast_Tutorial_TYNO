<?xml version="1.0" encoding="utf-8"?>
<com.example.padc_thepodcast_tutorial_tyno.views.viewpods.EmptyViewPod
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEmptyImage"
        android:layout_width="160dp"
        android:layout_centerInParent="true"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/empty"/>

    <org.mmtextview.components.MMTextView
        android:id="@+id/tvEmpty"
        android:text="@string/no_podcasts"
        android:layout_below="@id/ivEmptyImage"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <org.mmtextview.components.MMButton
        android:id="@+id/btnTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvEmpty"/>

</com.example.padc_thepodcast_tutorial_tyno.views.viewpods.EmptyViewPod>